<%= link_to 'Back', pins_path %>

<div class="row">
	<div class="col-md-offset-2 col-md-8"> <!-- ofset-5 or 2 is to move the image beck and forwerd acroos the page -->
		<div class="panel panel-default">
		<!-- <p id="notice"><%= notice %></p> we dont need this because we have it in the flash massage -->
		<div class="panel-heading center">
		<%= image_tag @pin.image.url(:medium)  %> <!-- we are using a function called image_tag to create an image_tag in rails  @pin is for the pin class and we have an image.url  -->
		</div>
		<div class="panel-body">
		<p><%= @pin.description %></p>
		 <p><strong><%= @pin.user.email if @pin.user %></strong></p>

		<% if @pin.user == current_user %>
			 <%= link_to edit_pin_path(@pin) do %>
          <span class="glyphicon glyphicon-edit"></span>
          Edit
          <% end %>
			<% end %>
		</div>
	</div>
</div>